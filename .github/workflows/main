name: Build and Deploy to Cloud Run

on:
    push:
        branches:
            - main

# Environment variables available to all jobs and steps in this workflow
env:
    PROJECT_ID: us-gcp-ame-con-116-npd-1
    SERVICE_NAME: hu-may-prod-city-guide-backend

  build:
    name: Cloud Run Deploy
    runs-on: ubuntu-latest
    steps:

      - name: Checkout
        uses: actions/checkout@master


      # Setup gcloud CLI
      - uses: google-github-actions/setup-gcloud@v0
        with:
          service_account_key: ${{ secrets.GCP_SA_KEY}}
          
      - name: 'Use gcloud CLI'
        run: 'gcloud info'

      - name: Configure project id
        run: |
          gcloud config set project us-gcp-ame-con-116-npd-1
      #Build and Push image
      - name: Build
        run: |-
              docker build -t gcr.io/us-gcp-ame-con-116-npd-1/$SERVICE_NAME .
              
          # Configure docker to use the gcloud command-line tool as a credential helper
      - run: |
            gcloud auth configure-docker -q
      # Push image to Google Container Registry
      - name: Push
        run: |-
            docker push gcr.io/us-gcp-ame-con-116-npd-1/$SERVICE_NAME
   
      - name: Deploy
        run: |    
            gcloud run deploy $SERVICE_NAME --port=8080 --image gcr.io/us-gcp-ame-con-116-npd-1/$SERVICE_NAME --min-instances 1 --max-instances 3 --memory 2000Mi --platform managed --region us-west2 --allow-unauthenticated  --vpc-connector='hu-conn' --add-cloudsql-instances='huex-mysql' --set-env-vars=[DBN='cityguide']
